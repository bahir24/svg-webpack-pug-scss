include blocks/head.pug
body
    .container
        .diagram__wrapper
            svg.diagram(viewBox="0 0 500 500")
                -
                    var rounds = [
                        {
                            name: 'first',
                            percent: 20
                        },
                        {
                            name: 'second',
                            percent: 95
                        },
                        {
                            name: 'third',
                            percent: 15
                        },
                        {
                            name: 'fourth',
                            percent: 35
                        },
                        {
                            name: 'fifth',
                            percent: 80
                        },
                        {
                            name: 'sixth',
                            percent: 50
                        },
                    ];
                each color, name in ColorsFromFile.colors
                    circle.circle(class= 'circle' + '--' + name class= 'percent' + '-' + (Math.floor(Math.random() * 20)) * 5)